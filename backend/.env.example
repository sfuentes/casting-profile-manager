# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGO_URI=mongodb://127.0.0.1:27017/darsteller-manager

# JWT Secret for Authentication (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRE=7

# Frontend URL (for CORS in production)
FRONTEND_URL=http://localhost:5173

# Email Configuration (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_password
FROM_EMAIL=noreply@casting-manager.com
FROM_NAME=Casting Profile Manager

# File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=600000
RATE_LIMIT_MAX=100

# Platform API Keys
FILMMAKERS_CLIENT_ID=your-client-id
FILMMAKERS_CLIENT_SECRET=your-client-secret
CASTING_NETWORK_API_KEY=your-api-key
SCHAUSPIELERVIDEOS_API_KEY=your-api-key
ETALENTA_API_KEY=your-api-key
JOBWORK_CLIENT_ID=your-client-id
JOBWORK_CLIENT_SECRET=your-client-secret
WANTED_CLIENT_ID=your-client-id
WANTED_CLIENT_SECRET=your-client-secret

# Puppeteer Configuration (set if Chromium is installed at a custom path)
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
